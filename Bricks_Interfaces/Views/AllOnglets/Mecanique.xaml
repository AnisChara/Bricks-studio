<UserControl x:Class="Bricks_Interfaces.Views.AllOnglets.Mecanique"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces.Views.AllOnglets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="AliceBlue" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding Actions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Width="auto">
                            <Button Content="{Binding Name}" 
                            Command="{Binding DataContext.AddActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            CommandParameter="{Binding}" 
                            Width="70" 
                            Height="30"
                            FontSize="13">
                                <Button.ToolTip>
                                    <ToolTip Content="{Binding Description}" />
                                </Button.ToolTip>
                            </Button>


                            <TextBox Width="30" FontSize="20" Height="auto"
                             Text="{Binding Parameters}" Visibility="{Binding Param_box}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Background="Beige" Grid.Column="1" Name="board">
            <TextBlock Text="Onglet Mécanique" FontSize="20" HorizontalAlignment="Center"/>
            <Grid>
                <DataGrid ItemsSource="{Binding Mecanique}" Height="auto" Width="auto" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <!-- Affiche la propriété Name -->
                        <DataGridTextColumn Binding="{Binding Name}" Header="Action"/>
                        <DataGridTextColumn Binding="{Binding Parameters}" Header="valeur" Visibility="{Binding Param_box}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <TextBox Text="{Binding MecaniqueName}" Width="100" Height="20" Margin="5" />
            <Button Content="Confirmer" Width="100" Height="30" Margin="5" Command="{Binding ConfirmCommand}" CommandParameter="{Binding MecaniqueName}" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content ="Clear" Width="30" Height="30" Background="Red" Command="{Binding DataContext.ClearMecaniqueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
        </StackPanel>
    </Grid>
</UserControl>
