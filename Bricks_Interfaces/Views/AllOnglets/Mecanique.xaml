<UserControl x:Class="Bricks_Interfaces.Views.AllOnglets.Mecanique"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces.Views.AllOnglets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="AliceBlue" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding Actions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}" Command="{Binding DataContext.AddActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Width="auto" Height="20"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Background="Beige" Grid.Column="1" Name="board">
            <TextBlock Text="Onglet Mécanique" FontSize="20" HorizontalAlignment="Center"/>
            <Grid>
                <DataGrid ItemsSource="{Binding Mecanique}" Height="auto" Width="auto" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <!-- Affiche la propriété Name -->
                        <DataGridTextColumn Binding="{Binding Name}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <TextBox Text="{Binding MecaniqueName}" Width="100" Height="20" Margin="5" />
            <Button Content="Confirmer" Width="100" Height="30" Margin="5" Command="{Binding ConfirmCommand}" CommandParameter="{Binding MecaniqueName}" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content ="Clear" Width="30" Height="30" Background="Red" Command="{Binding DataContext.ClearMecaniqueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
        </StackPanel>
    </Grid>
</UserControl>
