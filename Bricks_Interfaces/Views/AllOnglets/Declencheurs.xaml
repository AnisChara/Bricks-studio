<UserControl x:Class="Bricks_Interfaces.Views.AllOnglets.Declencheurs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces.Views.AllOnglets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="AliceBlue" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding Events}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Width="auto">
                            <Button Content="{Binding Name}" 
                                Command="{Binding DataContext.AddEventCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}" 
                                Width="auto" 
                                Height="auto">
                                <Button.ToolTip>
                                    <ToolTip Content="{Binding Description}" />
                                </Button.ToolTip>
                            </Button>

                            <TextBox Width="auto" Height="auto"
                                 Text="{Binding Parameters}" 
                                 Visibility="{Binding Param_box}">
                            </TextBox>
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Background="NavajoWhite" Grid.Column="1" Name="board">
            <TextBlock Text="Onglet Déclencheurs" FontSize="20" HorizontalAlignment="Center"/>
            <Grid>
                <DataGrid ItemsSource="{Binding Declencheur}" Height="auto" Width="auto" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                    <!-- Affiche la propriété Name -->
                        <DataGridTextColumn Binding="{Binding Name}" Header="Evenement"/>
                        <DataGridTextColumn Binding="{Binding Parameters}" Header="valeur" Visibility="{Binding Param_box}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <TextBox Text="{Binding DeclencheurName}" Width="100" Height="20" Margin="5" />
            <Button Content="Confirmer" Width="100" Height="30" Margin="5" Command="{Binding ConfirmCommand}" CommandParameter="{Binding DeclencheurName}" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content ="Clear" Width="30" Height="30" Background="Red" Command="{Binding DataContext.ClearDeclencheurCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
        </StackPanel>
        

    </Grid>
</UserControl>
