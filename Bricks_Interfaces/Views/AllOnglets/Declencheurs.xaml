<UserControl x:Class="Bricks_Interfaces.Views.AllOnglets.Declencheurs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces.Views.AllOnglets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="AliceBlue" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding Events}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Width="auto">
                            <Button Content="{Binding Name}" 
                                Command="{Binding DataContext.AddEventCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}" 
                                Width="70" 
                                Height="30"
                                FontSize="15">
                                <Button.ToolTip>
                                    <ToolTip Content="{Binding Description}" />
                                </Button.ToolTip>
                            </Button>

                            <ComboBox Width="30" FontSize="20" Height="auto"
                                 SelectedItem="{Binding Parameter_value}"
                                 ItemsSource="{Binding Available_parameter_values}" 
                                 Visibility="{Binding Show_list}">
                            </ComboBox>
                            

                            <TextBox Width="30" FontSize="20" Height="auto"
                                Text="{Binding Parameter_value}" Visibility="{Binding Show_number}"/>

                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Background="NavajoWhite" Grid.Column="1" Name="board">
            <TextBlock Text="Onglet Déclencheurs" FontSize="20" HorizontalAlignment="Center"/>
            <Grid>
                <DataGrid ItemsSource="{Binding Declencheur}" Height="auto" Width="auto" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                    <!-- Affiche la propriété Name -->
                        <DataGridTextColumn Binding="{Binding Name}" Header="Evenement"/>
                        <DataGridTextColumn Binding="{Binding Parameter_value}" Header="valeur"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <TextBox Text="{Binding DeclencheurName}" Width="100" Height="20" Margin="5" />
            <Button Content="Confirmer" Width="100" Height="30" Margin="5" Command="{Binding ConfirmCommand}" CommandParameter="{Binding DeclencheurName}" />
            <Button HorizontalAlignment="center" VerticalAlignment="Bottom" Content ="Clear" Width="30" Height="30" Background="Red" Command="{Binding DataContext.ClearDeclencheurCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
        </StackPanel>
        

    </Grid>
</UserControl>
