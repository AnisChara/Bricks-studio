<UserControl x:Class="Bricks_Interfaces.Views.AllOnglets.Nodes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces.Views.AllOnglets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="AliceBlue" Grid.Column="0">
            <WrapPanel Name="ListNode">

            </WrapPanel>
        </StackPanel>
        <StackPanel Background="Bisque" Grid.Column="1">
            <TextBlock Text="Onglet Nodes" FontSize="20" HorizontalAlignment="Center"></TextBlock>
            <DataGrid ItemsSource="{Binding Nodes}" Height="auto" Width="auto" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <!-- Affiche la propriété Name -->
                    <DataGridTextColumn Binding="{Binding Name}" />
                    <DataGridTextColumn Binding="{Binding Declencheur.Name}" />
                    <DataGridTextColumn Binding="{Binding Mecanique.Name}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
