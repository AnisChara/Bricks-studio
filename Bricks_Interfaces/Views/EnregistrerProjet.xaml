<Window x:Class="Bricks_Interfaces.EnregistrerProjet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnregistrerProjet">

    <Grid>
        <TextBlock Text="Enregistrer votre projet" 
           FontSize="28" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="20,15,0,0" />
        <TextBlock Text="Nom du projet" 
           FontSize="14" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="20,75,0,0" />
        <TextBox Name="ProjectName" Width="400" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <TextBlock Text="Emplacement" 
           FontSize="14" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="20,140,0,0" />
        <TextBox Name="folderPathTextBox" 
            Width="400" 
            Height="20" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="20,165,0,0"
            IsReadOnly="True"/>
        <Button Content="..." 
            Width="30" 
            Height="20" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" Margin="430,165,0,0"
            Click="OnFileClick"/>
        <Button Content="Retour" 
            Width="80" 
            Height="22" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" Margin="20,250,0,0"
            Click="OnRetourClick"/>
        <Button Content="Enregistrer" 
            Width="80" 
            Height="22" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" Margin="115,250,0,0"
            Click="OnEnregistrerClick"/>
    </Grid>
</Window>

