<UserControl x:Class="Bricks_Interfaces.Views.Assets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bricks_Interfaces.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel Background="Azure" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel HorizontalAlignment="Center" >
                <Button x:Name="btn_structure" Content="Ajouter structure" Margin="0 0 25 0" Command="{Binding AddStructure}"/>
                <!-- Obstacle = Structure offensive -->
                <Button x:Name="btn_obstacle" Content="Ajouter obstacle" Margin="0 0 25 0" Command="{Binding AddObstacle}"/>
                <Button x:Name="btn_ennemie" Content="Ajouter ennemie" Margin="0 0 25 0" Command="{Binding AddEnnemy}"/>
                <Button x:Name="btn_zone" Content="Ajouter ligne d'arrivée" Command="{Binding AddZone}" Margin="0 0 25 0"/>
                <Button Content="Ajouter niveau" Margin="0 0 0 0" Command="{Binding AddLevelCommand}" />
                <TextBox  Margin="0 0 25 0" Text="{Binding LevelName}" Width="30"/>
                <Button Content="Supprimer niveau" Margin="0 0 25 0" Command="{Binding DeleteLevelCommand}" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
